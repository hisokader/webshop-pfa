              url:"<?= $this->url(array('controller'=>'index','action'=>'login'))?>",
              
              data:$(this).serialize(),
              type:'Get',//by default get
              success:function( msg ) {
                alert( "Data Saved: " + msg );
                $("#loginForm input[type=text]").css( "border-color", "#B94A48" );
              },
              error:function( msg ) {
                alert( "Data Saved: " + msg );
              }
            }).done(function() { 
              $("#loginForm").fadeTo('fast', 1);
              $("#ajaxLoader").hide();
            });
        return false;
      });
        

